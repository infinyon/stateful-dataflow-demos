{
  "openapi": "3.0.3",
  "info": {
    "title": "Slack Event API for InfinyOn SDF",
    "version": "1.0.0"
  },
  "paths": {},
  "components": {
    "schemas": {
      "slack_event": {
        "type": "object",
        "required": [
          "blocks"
        ],
        "properties": {
          "blocks": {
            "type": "array",
            "items": {
              "oneOf": [
                {
                  "$ref": "#/components/schemas/text_section"
                },
                {
                  "$ref": "#/components/schemas/fields_section"
                }
              ]
            }
          }
        }
      },
      "text_section": {
        "type": "object",
        "required": [
          "type",
          "text"
        ],
        "properties": {
          "type": {
            "type": "string",
            "enum": [
              "section"
            ]
          },
          "text": {
            "$ref": "#/components/schemas/text_object"
          }
        }
      },
      "fields_section": {
        "type": "object",
        "required": [
          "type",
          "fields"
        ],
        "properties": {
          "type": {
            "type": "string",
            "enum": [
              "section"
            ]
          },
          "fields": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/text_object"
            }
          }
        }
      },
      "text_object": {
        "type": "object",
        "required": [
          "type",
          "text"
        ],
        "properties": {
          "type": {
            "type": "string",
            "enum": [
              "mrkdwn"
            ]
          },
          "text": {
            "type": "string"
          }
        }
      }
      ,
      "slack_obj": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string"
          },
          "fields": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }        
        },
        "required": [
          "title",
          "fields"
        ]        
      }      
    }
  }
}
